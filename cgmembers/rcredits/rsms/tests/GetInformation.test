<?php
//
// Feature: Get information about account balance and system health
//   AS a player
//   I WANT information about my balance and the health of the system
//   SO I can make sound decisions about how much to pay and receive using the rCredits system

require_once __DIR__ . '/../../../gherkin/test-defs.php';
require_once __DIR__ . '/../rsms.steps';

class rsmsGetInformation extends DrupalWebTestCase {
  var $subs; // percent parameters (to Given(), etc.) and their replacements (eg: %random1 becomes some random string)
  var $currentTest;
  var $variant;
  const SHORT_NAME = 'GetInformation';
  const FEATURE_NAME = 'rsms Test - GetInformation';
  const DESCRIPTION = 'Get information about account balance and system health';
  const MODULE = 'rsms';

  public function gherkin($statement, $type) {
    $this->assertTrue(gherkinGuts($statement, $type), $statement, $this->currentTest);
  }
  
  public static function getInfo() {
    return array(
      'short_name' => self::SHORT_NAME,
      'name' => self::FEATURE_NAME,
      'description' => self::DESCRIPTION,
      'group' => ucwords(self::MODULE)
    );
  }

  public function setUp() { // especially, enable any modules required for the tests
    parent::setUp(self::MODULE);
    if (function_exists('extraSetup')) extraSetup($this); // defined in rsms.steps
    sceneSetup($this, __FUNCTION__);

    switch ($this->variant) {
    default: // fall through to case(0)

    }
  }

  // Scenario: Getting information
  public function testGettingInformation_0() {
    sceneSetup($this, __FUNCTION__, 0);
    Given('phone %number1 is member "NEW.ZZB"');
    And__('phone %number1 has r$200 including rewards of $2.50');
    And__('the total demand for rCredits is $26,987.56');
    When_('phone %number1 says "information"');
    Then_('we say to phone %number1 "account info" with subs: "DATA'
    . '\\| quid    | balance | rewards | total_demand |'
    . '\\| NEW.ZZB | $200    | $2.50   | $26,987.56   |"');
  }

  // Scenario: Getting information, larger amounts
  public function testGettingInformationLargerAmounts_0() {
    sceneSetup($this, __FUNCTION__, 0);
    Given('phone %number1 is member "NEW.ZZB"');
    And__('phone %number1 has r$100,000.01 including rewards of $99,908.00');
    And__('the total demand for rCredits is $1,226,987.25');
    When_('phone %number1 says "information"');
    Then_('we say to phone %number1 "account info" with subs: "DATA'
    . '\\| quid    | balance     | rewards  | total_demand  |'
    . '\\| NEW.ZZB | $100,000.01 | $99,908  | $1.22 million |"');
  }

}