<?php
//
// Feature: Edit Transaction
//   AS a member
//   I WANT to change the details of a payment to or from me
//   SO I can make it right.

require_once __DIR__ . '/../../../gherkin/test-defs.php';
require_once __DIR__ . '/../rweb.steps';

class rwebEditTx extends DrupalWebTestCase {
  var $subs; // percent parameters (to Given(), etc.) and their replacements (eg: %random1 becomes some random string)
  var $sceneName;
  const SHORT_NAME = 'EditTx';
  const FEATURE_NAME = 'rweb Test - EditTx';
  const DESCRIPTION = 'Edit Transaction';
  const MODULE = 'rweb';

  public function gherkin($statement, $type) {
    $this->assertTrue(gherkinGuts($statement, $type), $statement, $this->sceneName);
  }
  
  public static function getInfo() {
    return array(
      'short_name' => self::SHORT_NAME,
      'name' => self::FEATURE_NAME,
      'description' => self::DESCRIPTION,
      'group' => ucwords(self::MODULE)
    );
  }

  public function setUp() {} // must be compatible with DrupalWebTestCase::setUp()
  
  public function setUp2($sceneName, $variant = '') {
    global $sceneTest; $sceneTest = $this;
    parent::setUp(self::MODULE);

    $this->subs = usualSubs();
    $this->sceneName = __FUNCTION__;
    if (function_exists('extraSetup')) extraSetup($this); // defined in rweb.steps
    $this->sceneName = $sceneName;

    switch ($variant) {
    default: // fall through to case(0)
    case(0):
    Given('members: "ASSOC'
    . '\\| id   | fullName   | rebate | flags      |'
    . '\\| .ZZA | Abe One    |      5 | ok,bona    |'
    . '\\| .ZZB | Bea Two    |     10 | ok,bona    |'
    . '\\| .ZZC | Corner Pub |     10 | ok,co,bona |"');
    And__('relations: "ASSOC'
    . '\\| id   | main | agent | permission |'
    . '\\| :ZZA | .ZZC | .ZZA  | sell       |'
    . '\\| :ZZB | .ZZC | .ZZB  | buy        |"');
    And__('transactions: "ASSOC'
    . '\\| xid | created   | type     | amount | from | to   | purpose      |'
    . '\\|   1 | %today-6m | signup   |    250 | ctty | .ZZA | signup       |'
    . '\\|   2 | %today-6m | signup   |    250 | ctty | .ZZB | signup       |'
    . '\\|   3 | %today-6m | signup   |    250 | ctty | .ZZC | signup       |'
    . '\\|   4 | %today    | transfer |     20 | .ZZA | .ZZB | stuff        |'
    . '\\|   5 | %today    | rebate   |      1 | ctty | .ZZA | rebate on #2 |'
    . '\\|   6 | %today    | bonus    |      2 | ctty | .ZZB | bonus on #2  |"');
    Then_('balances: "ASSOC'
    . '\\| id   | balance | rewards |'
    . '\\| ctty |    -753 |         |'
    . '\\| .ZZA |     231 |     251 |'
    . '\\| .ZZB |     272 |     252 |'
    . '\\| .ZZC |     250 |     250 |"');
    break;


    }
  }

  // Scenario: A buyer changes the transaction description
  public function testABuyerChangesTheTransactionDescription_0() {
    $this->setUp2(__FUNCTION__, 0);
    Given('member ".ZZA" edits transaction "4" with values: "ASSOC'
    . '\\| amount | goods | purpose |'
    . '\\|     20 |     2 | things  |"');
    When_('member ".ZZA" visits page "history/period=5"');
    Then_('we show "Transaction History" with: "ARRAY'
    . '\\|_tid | Date | Name    | From you | To you | Status | _ | Purpose | Reward/Fee |'
    . '\\|   2 | %dm  | Bea Two |    20.00 |     -- | %chk   | X | things  |       1.00 |"');
  }

  // Scenario: A buyer increases a payment amount
  public function testABuyerIncreasesAPaymentAmount_0() {
    $this->setUp2(__FUNCTION__, 0);
    When_('member ".ZZA" edits transaction "4" with values: "ASSOC'
    . '\\| amount | goods | purpose |'
    . '\\|     40 |     2 | stuff   |"');
    Then_('balances: "ASSOC'
    . '\\| id   | balance | rewards |'
    . '\\| ctty |    -756 |         |'
    . '\\| .ZZA |     212 |     252 |'
    . '\\| .ZZB |     294 |     254 |'
    . '\\| .ZZC |     250 |     250 |"');
    And__('we say "status": "info saved"');
    And__('we notice "tx edited|new tx amount" to member ".ZZA" with subs: "ASSOC'
    . '\\| tid | who     | amount |'
    . '\\| 2   | you     | $40    |"');
    And__('we notice "tx edited|new tx amount" to member ".ZZB" with subs: "ASSOC'
    . '\\| tid | who     | amount |'
    . '\\| 2   | Abe One | $40    |"');
  }

  // Scenario: A buyer changes the goods status
  public function testABuyerChangesTheGoodsStatus_0() {
    $this->setUp2(__FUNCTION__, 0);
    When_('member ".ZZA" edits transaction "4" with values: "ASSOC'
    . '\\| amount | goods | purpose |'
    . '\\|     20 |     0 | stuff   |"');
    Then_('balances: "ASSOC'
    . '\\| id   | balance | rewards |'
    . '\\| ctty |    -750 |         |'
    . '\\| .ZZA |     230 |     250 |'
    . '\\| .ZZB |     270 |     250 |'
    . '\\| .ZZC |     250 |     250 |"');
    And__('we say "status": "info saved"');
    And__('we notice "tx edited|new tx goods" to member ".ZZA" with subs: "ASSOC'
    . '\\| tid | who     | what        |'
    . '\\| 2   | you     | exchange of US Dollars or other currency |"');
    And__('we notice "tx edited|new tx goods" to member ".ZZB" with subs: "ASSOC'
    . '\\| tid | who     | what  |'
    . '\\| 2   | Abe One | exchange of US Dollars or other currency |"');
  }

  // Scenario: A buyer tries to decrease a payment amount
  public function testABuyerTriesToDecreaseAPaymentAmount_0() {
    $this->setUp2(__FUNCTION__, 0);
    When_('member ".ZZA" edits transaction "4" with values: "ASSOC'
    . '\\| amount | goods | purpose |'
    . '\\|     10 |     2 | stuff   |"');
    Then_('we say "error": "illegal amount change" with subs: "ASSOC'
    . '\\| amount | action   | a |'
    . '\\| $20    | decrease | ? |"');
  }

  // Scenario: A buyer disputes a charge
  public function testABuyerDisputesACharge_0() {
    $this->setUp2(__FUNCTION__, 0);
    Given('transactions: "ASSOC'
    . '\\| xid | created   | type     | amount | from | to   | purpose  | taking |'
    . '\\| 100 | %today-5d | transfer |     80 | .ZZA | .ZZC | this CF  | 1      |'
    . '\\| 101 | %today-5d | rebate   |      4 | ctty | .ZZA | rebate   | 0      |'
    . '\\| 102 | %today-5d | bonus    |      8 | ctty | .ZZC | bonus    | 0      |"');
    When_('member ".ZZA" visits page "history/period=5"');
    Then_('we show "Transaction History" with: "ARRAY'
    . '\\|_tid | Date   | Name       | From you | To you | Status | _ | Purpose | Reward/Fee |'
    . '\\|   3 | %dm-5d | Corner Pub | 80.00    | --     | %chk   | X | this CF | 4.00       |"');
    When_('member ".ZZA" clicks "X" on transaction 100');
    Then_('we show "tx summary|confirm tx action" with subs: "ASSOC'
    . '\\| amount | otherName  | otherDid | purpose | created   | txAction            |'
    . '\\| $80    | Corner Pub | charged  | this CF | %today-5d | DISPUTE this charge |"');
    When_('member ".ZZA" confirms "X" on transaction 100');
    Then_('we say "status": "report undo" with subs: "ASSOC'
    . '\\| solution |'
    . '\\| marked \'\'disputed\'\' |"');
    And__('we show "Transaction History" with: "ARRAY'
    . '\\|_tid | Date   | Name       | From you | To you | Status   | _ | Purpose | Reward/Fee |'
    . '\\|   3 | %dm-5d | Corner Pub | 80.00    | --     | disputed |   | this CF | 4.00       |"');
  }

  // Scenario: A seller reverses a charge
  public function testASellerReversesACharge_0() {
    $this->setUp2(__FUNCTION__, 0);
    Given('transactions: "ASSOC'
    . '\\| xid | created   | type     | amount | from | to   | purpose  | taking |'
    . '\\| 100 | %today-5d | transfer |     80 | .ZZA | .ZZC | this CF  | 1      |'
    . '\\| 101 | %today-5d | rebate   |      4 | ctty | .ZZA | rebate   | 0      |'
    . '\\| 102 | %today-5d | bonus    |      8 | ctty | .ZZC | bonus    | 0      |"');
    When_('member ":ZZB" visits page "history/period=5"');
    Then_('we show "Transaction History" with: "ARRAY'
    . '\\|_tid | Date   | Name    | From you | To you | Status | _ | Purpose | Reward/Fee |'
    . '\\|   2 | %dm-5d | Abe One | --       | 80.00  | %chk   | X | this CF | 8.00       |"');
    When_('member ":ZZB" clicks "X" on transaction 100');
    Then_('we show "tx summary|confirm tx action" with subs: "ASSOC'
    . '\\| amount | otherName | otherDid | purpose | created   | txAction            |'
    . '\\| $80    | Abe One   | paid     | this CF | %today-5d | REVERSE this charge |"');
  }

}