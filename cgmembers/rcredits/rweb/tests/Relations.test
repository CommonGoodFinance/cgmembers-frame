  // Scenario: It's complicated
  public function testItsComplicated_0() {
    $this->setUp2(__FUNCTION__, 0);
    Given('relations: "DATA'
    . '\\| id   | main | agent | permission | amount | employerOk | employeeOk | isOwner |'
    . '\\| .ZZA | .ZZA | .ZZD  | sell       |     10 | 1           | 0           | 1        |'
    . '\\| .ZZB | .ZZD | .ZZA  |            |     20 | 0           | 1           | 0        |'
    . '\\| .ZZC | .ZZA | .ZZC  | buy        |     30 | 0           | 1           | 0        |'
    . '\\| .ZZD | .ZZC | .ZZA  | manage     |     40 | 1           | 0           | 0        |'
    . '\\| .ZZE | .ZZA | .ZZB  | sell       |     10 | 1           | 0           | 1        |'
    . '\\| .ZZF | .ZZB | .ZZA  |            |     20 | 1           | 1           | 0        |"');
    When_('member ".ZZA" visits page "account/relations"');
    Then_('we show "Relations" with: "DATA'
    . '\\| Other      | My employer? | My employee? | Family? | Permission    |_requests      |'
    . '\\| Bea Two    | Yes          | Yes          | Yes     | send invoices | -- |'
    . '\\| Corner Pub | No           | --           | No      | --            | --       |'
    . '\\| Dee Four   | Yes          | Yes          | Yes     | send invoices | -- |"');
    When_('member ".ZZB" visits page "account/relations"');
    Then_('we show "Relations" with: "DATA'
    . '\\| Other   | My employee? | Family? | Permission |_requests      |'
    . '\\| Abe One | Yes          | No      | no access  | --            |"');
    When_('member ".ZZD" visits page "account/relations"');
    Then_('we show "Relations" with: "DATA'
    . '\\| Other   | My employer? | My employee? | Family? | Permission |_requests      |'
    . '\\| Abe One | No           | No           | No      | no access  | --            |"');
    And__('with: "DATA'
    . '\\|_Header  |'
    . '\\| Family? |"');
    When_('member ":ZZD" visits page "account/relations"');
    Then_('we show "Relations" with: "DATA'
    . '\\| Other   | My employee? | Owner? | Permission     |_requests      |'
    . '\\| Abe One | Yes          | No     | manage account | -- |"');
    And__('without: "DATA'
    . '\\|_Header    |'
    . '\\| employer? |"');
  }

