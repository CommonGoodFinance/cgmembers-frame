  // Scenario: A member signs in for the first time
  public function testAMemberSignsInForTheFirstTime_0() {
    $this->setUp2(__FUNCTION__, 0);
    Given('member is logged out');
    And__('invitation to email "d@" is "c0D3"');
    When_('member "?" confirms form "signup/code=c0D3&dwok=1" with values: "DATA'
    . '\\| fullName | email | phone | country | postalCode | federalId | dob      | acctType    | code | verifyBy |'
    . '\\| Dee Four | d@ | 413-253-0000 | US  | 01002    | 123-45-6789 | 1/2/1993 | %R_PERSONAL | c0D3 |        1 |"');
    Then_('members: "DATA'
    . '\\| id      | fullName | email   | country | postalCode | state | city    | flags        |'
    . '\\| NEW.AAC | Dee Four | d@      | US      | 01002      | MA    | Amherst | dft,person   |"');
    And__('member "NEW.AAC" one-time password is set');
    Given('member "NEW.AAC" one-time password is %whatever');
    When_('member "?" visits page "/user/login"');
    Then_('we show "Welcome" with: "DATA'
    . '\\| Tmp password |'
    . '\\| New password |'
    . '\\| Confirm new password |'
    . '\\| security code |"');
    When_('member "?" confirms form "/user/login" with values: "DATA'
    . '\\| name    | pass      | pass1  | pass2  | pin  |'
    . '\\| deefour | %whatever | Aa1!.. | Aa1!.. | 1234 |"');
    Then_('we show "Account Summary"');
    And__('we say "status": "take a step"');
    And__('member ".AAC" is on step "Phone" within 10 seconds');
  }

