    $this->setUp2(__FUNCTION__, 0);
    Given('members have: "DATA'
    . '\\| id   | federalId | dob      |'
    . '\\| .ZZA | 999999999 | 1/1/1991 |"');
    And__('member ".ZZA" chose to verify phone by "Voice"');
    When_('member ".ZZA" visits page "status"');
    Then_('member ".ZZA" is on step "Phone" within 30 seconds');
    When_('member ".ZZA" visits page "status"');
    Then_('we show "Verify Phone"');
