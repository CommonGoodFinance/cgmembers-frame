    And__('with: "ARRAY'
    . '\\|_tid | Date   | Name       | From you | To you | Status  | _    | Purpose    | Reward |'
    . '\\| 6   | %dm-6d | Bea Two    | 100.00   | --     | %chk    | X    | cash V     | --     |'
    . '\\| 5   | %dm-1w | Corner Pub | 120.00   | --     | %chk    | X    | this Q     | 6.00   |"');
    And__('without: "ARRAY'
    . '\\| pie N    |'
    . '\\| whatever |'
    . '\\| usd F    |'
    . '\\| cash E   |'
    . '\\| signup   |'
    . '\\| rebate   |'
    . '\\| bonus    |"');
  }

}