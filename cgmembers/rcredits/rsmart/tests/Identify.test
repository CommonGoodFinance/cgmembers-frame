    Then_('we respond with: "ASSOC'
    . '\\| ok | name    | logon | descriptions    | can          | bad | default | company    | time |'
    . '\\| 1  | Bea Two | 1     | this,that,other | refund,r4usd |     | NEW.ZZC  | Corner Pub | %now |"');
  }

