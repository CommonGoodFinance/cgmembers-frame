/**
 * we show pdf with: (ARG)
 *
 * in: TEST checks AdminPrintsChecks
 */
function weShowPdfWith($list) {
  global $testOnly, $pdfSays;
  $in = strip_tags(join(' ', @$pdfSays ?: []));
  $px = 0;
  foreach ($list as $k => $v) {
    foreach ($v as $one) {
      $p = strpos($in, $one, $px);
      if ($p === FALSE) return t\output("Can't find \"$one\" in \"$in\" starting at $px.");
      $px = $p + strlen($one);
    }
  }
  return TRUE;
}

