  }

  /**
   * Mark two accounts joined (a joint account)
   * @param acct $b: the other account
   * Note we cannot split rewards and floor because they are recalculated in cron.
   */
  function join($b) {
    $a = $this;

    $DBTX = \db_transaction();
    $minimum = $a->minimum + $b->minimum;
    $a->update('jid minimum', $b->id, $a->id < $b->id ? $minimum : 0);
    $b->update('jid minimum', $a->id, $b->id < $a->id ? $minimum : 0);
    unset($DBTX);
  }
  
  /**
   * Unjoin a specific joint account or delete a specific joint account request or remove all joins and requests
   * @param acct $b: the joined account (any and all, if empty)
   */
  function unjoin($b = '') {
    $a = $this;
    $sql = 'UPDATE r_relations SET permission=:manage WHERE permission=:joint AND main=:main';
    $subs = u\ray('manage joint main', r\perm(B_MANAGE), r\perm(B_JOINT), $a->id);

    $DBTX = \db_transaction();
    if ($jid = $a->jid) { // unravel a consummated join
      $b = r\acct($jid); // ignore param (actual joined account will be unjoined and any join requests zapped)
      foreach ([$a, $b] as $ai) {
        $ai->update('jid minimum', '', max($a->minimum, $b->minimum));
        $ai->cacheOk(); // make sure each account is left with its proper cached amounts
      }
      list ($a1, $a2) = u\order($b->r > $a->r, $b, $a);
      $amount = round(($a1->r - $a2->r) / 2, 2);
      if ($amount > 0) be\transfer('payment', $a1, $a2, $amount, R_FOR_USD, t('joint account settlement'));
    } elseif ($b) {
      $sql .= ' AND other=:other';
      $subs += ['other'=>$b->id];
    }
    db\q($sql, $subs); // zap one or more joins (or requested joins) for this account
    unset($DBTX);
  }

