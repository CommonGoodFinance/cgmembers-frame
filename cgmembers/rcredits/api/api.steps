/**
 * the response op is (ARG) and the status is (ARG) and there are (ARG) responses and they are: (ARG)
 *
 * in: TEST validateUserIds UserWantsToValidateAnotherCustomerAccountAndSucceeds
 *     TEST validateUserIds UserWantsToValidateAnotherCustomerAccountAndFails
 *     TEST validateUserIds UserWantsToValidateSeveralCustomerAccountsSomeOfWhichSucceed
 */
function theResponseOpIsAndTheStatusIsAndThereAreResponsesAndTheyAre($op, $status, $num, $correctResponses) {
  global $testOnly; if (!$testOnly) return FALSE;
  global $rAPIResult;

  extract($rAPIResult, EXTR_PREFIX_ALL, 't');
          
  if ($op != $t_op) {
    t\output("Expected op: $op, got: $t_op");
    return FALSE;
  }
  if ($status != $t_status) {
    t\output("Expected status $status, got: $t_status");
    return FALSE;
  }
  return t\jsonResponses($correctResponses, $t_responses);
}

