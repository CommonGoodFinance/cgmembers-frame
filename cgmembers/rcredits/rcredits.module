function bs($n) {
  $bits = u\ray(B_LIST);
  $result = '';
  for ($i=0; $i <= B_MAX; $i++) if ($n & u\bit($i)) {
    $result .= $bits[$i] . ' ';
  }
  return $result;
} // keep here

